<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />

    <uses-permission android:name="android.permission.POST_NOTIFICATIONS"/>
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_CAMERA" />

    <queries>
        <intent>
            <action android:name="android.intent.action.MAIN" />

            <category android:name="android.intent.category.LAUNCHER" />
        </intent>
    </queries>

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:enableOnBackInvokedCallback="true"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.VisuoLink"
        tools:targetApi="31">
        <activity
            android:name=".ui.AboutActivity"
            android:exported="false" />
        <activity android:name=".ui.PolicyActivity"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.settings.ManageProfileActivity" />
        <activity android:name=".ui.settings.ChangePasswordActivity" />
        <activity android:name=".backend.applauncher.MainAppLauncherActivity" />
        <activity android:name=".backend.applauncher.RecordGestureActivity" />
        <activity android:name=".backend.applauncher.MappedGesture" />
        <activity android:name=".backend.applauncher.MapGestureToApp" />
        <activity android:name=".backend.gesturecontrol.MainGestureControlActivity" />
        <activity android:name=".backend.eyegesture.MainEyeGestureActivity" />
        <activity
            android:name=".backend.applauncher.GestureCaptureActivity"
            android:exported="true" />

        <service
            android:name=".backend.eyegesture.EyeGestureService"
            android:foregroundServiceType="camera"
            android:exported="false" />


        <service
            android:name=".backend.accessibility.AppAccessibilityService"
            android:exported="false"
            android:permission="android.permission.BIND_ACCESSIBILITY_SERVICE">

            <intent-filter>
                <action android:name="android.accessibilityservice.AccessibilityService" />
            </intent-filter>

            <meta-data
                android:name="android.accessibilityservice"
                android:resource="@xml/accessibility_service_config" />
        </service>
    </application>

</manifest>