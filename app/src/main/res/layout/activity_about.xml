<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    android:fillViewport="true"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:contentDescription="@string/user_profile_pic"
            android:src="@drawable/ic_launcher_round"
            android:scaleType="centerCrop"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VisuoLink"
            android:textSize="40sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1.24"
            android:textColor="?android:attr/textColorSecondary"
            android:layout_gravity="end"
            android:textSize="14sp"
            android:textStyle="italic"
            android:layout_marginEnd="62dp" />

    </LinearLayout>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="14dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="?attr/background"
                android:padding="12dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="VisuoLink is a gesture-based application designed to enhance your productivity by performing various tasks through gestures."
                    android:textSize="18sp"
                    android:textColor="?android:attr/textColorSecondary"
                    android:layout_marginBottom="10dp"/>

                <TextView
                    android:id="@+id/visuolink_website_link"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="More info"
                    android:textColor="@color/purple_500"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:autoLink="web"
                    android:linksClickable="true"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/about_developer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Developer?"
                android:textColor="@color/blue"
                android:textSize="20sp"
                android:layout_gravity="end"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="5dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/about_developer_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="About the Developer"
                android:textSize="25sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="14dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="?attr/background"
                    android:padding="12dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Developed by Sumit Dubey, an Software developer passionate about creating intuitive and efficient applications."
                        android:textSize="16sp"
                        android:textColor="?android:attr/textColorSecondary"
                        android:layout_marginBottom="10dp"/>

                    <TextView
                        android:id="@+id/developer_portfolio_link"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="More info"
                        android:textColor="@color/purple_500"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:autoLink="web"
                        android:linksClickable="true"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thanks for choosing VisuoLink"
            android:textSize="18sp"
            android:textStyle="italic"
            android:layout_marginTop="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="- brought to you by the developers"
            android:textSize="14sp"
            android:textColor="?android:attr/textColorSecondary"
            android:textStyle="italic"
            android:layout_marginStart="20dp"/>

    </LinearLayout>
</ScrollView>
