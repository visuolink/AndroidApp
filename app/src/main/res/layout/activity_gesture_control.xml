<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:scrollbars="none"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="20dp"
            android:paddingBottom="24dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Let's you perform specific tasks by gesture."
                android:textSize="16sp"
                android:lineSpacingExtra="4dp"
                android:textColor="?android:attr/textColorSecondary"
                android:paddingTop="5dp"
                android:paddingBottom="15dp"
                android:layout_marginStart="15dp"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="14dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="?attr/background"
                    android:padding="12dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="How it works"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="?android:attr/textColorPrimary"
                        android:paddingBottom="12dp"
                        android:layout_marginStart="10dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="- Perform the gesture to do the task. \n- Enable or Disable the specific gesture."
                        android:textSize="16sp"
                        android:lineSpacingExtra="5dp"
                        android:textColor="?android:attr/textColorSecondary"
                        android:layout_marginStart="20dp"/>

                    <TextView
                        android:id="@+id/working"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:drawableRightCompat="@drawable/arrow_down"/>

                    <LinearLayout
                        android:id="@+id/hiddenInfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:orientation="vertical"
                        android:layout_marginStart="20dp">

                        <TextView
                            android:text="Enable the gesture which you want to use"
                            android:textSize="16sp"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:textColor="?android:attr/textColorSecondary"/>
                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="14dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="?attr/background"
                    android:padding="12dp">

                    <TextView
                        android:text="Gestures"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:drawablePadding="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:drawableLeftCompat="@drawable/app_option"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="34dp">

                        <TextView
                            android:text="Eye Gesture"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="14sp"/>

                        <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/eye_control_switch"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"/>

                        <TextView
                            android:id="@+id/eye_gesture_info"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:drawableLeftCompat="@drawable/arrow_right_sided"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/hiddenInfoEyeGesture"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone"
                        android:padding="16dp"
                        android:layout_marginStart="20dp">

                        <TextView
                            android:text="Point Index Finger towards Camera"
                            android:textSize="16sp"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:textColor="?android:attr/textColorSecondary"/>

                        <ImageView
                            android:layout_width="140dp"
                            android:layout_height="140dp"
                            android:src="@drawable/pointindexfinger"
                            android:layout_gravity="center_horizontal"
                            android:scaleType="centerCrop"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="34dp">

                        <TextView
                            android:text="Screenshort"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="14sp"/>

                        <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/screenshot_gesture_switch"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"/>

                        <TextView
                            android:id="@+id/screenshot_gesture_info"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:drawableLeftCompat="@drawable/arrow_right_sided"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/hiddenInfoScreenshotGesture"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone"
                        android:padding="16dp"
                        android:layout_marginStart="20dp">

                        <TextView
                            android:text="Close the hand with thump In"
                            android:textSize="16sp"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:textColor="?android:attr/textColorSecondary"/>

                        <ImageView
                            android:layout_width="140dp"
                            android:layout_height="140dp"
                            android:src="@drawable/thumbclose"
                            android:layout_gravity="center_horizontal"
                            android:scaleType="centerCrop"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="34dp">
                        <TextView
                            android:text="Screen Recorder"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="14sp"/>

                        <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/screen_recorder_gesture_switch"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"/>

                        <TextView
                            android:id="@+id/screen_recorder_gesture_info"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:drawableLeftCompat="@drawable/arrow_right_sided"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/hiddenInfoScreenRecorderGesture"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone"
                        android:padding="16dp"
                        android:layout_marginStart="20dp">

                        <TextView
                            android:text="Close the hand with thump out"
                            android:textSize="16sp"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:textColor="?android:attr/textColorSecondary"/>

                        <ImageView
                            android:layout_width="140dp"
                            android:layout_height="140dp"
                            android:src="@drawable/thumpout"
                            android:layout_gravity="center_horizontal"
                            android:scaleType="centerCrop"/>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="15dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Note"
                android:textSize="18sp"
                android:textStyle="bold"
                android:paddingBottom="10dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Make sure that gesture control is enable from the settings"
                android:textColor="?android:attr/textColorSecondary"
                android:textSize="16sp"
                android:lineSpacingExtra="4dp"
                android:paddingBottom="15dp"/>

        </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
